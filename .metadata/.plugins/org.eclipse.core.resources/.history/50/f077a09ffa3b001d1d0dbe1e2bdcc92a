#ifndef INC_DTH11_H_
#define INC_DTH11_H_

#endif /* INC_DTH11_H_ */

typedef struct{
	uint8_t dthpin;
	uint8_t dthport;
}dth11_typedef_t;

static typedef struct{
	uint8_t	status;
	uint8_t humidity_byte1;
	uint8_t humidity_byte2;
	uint8_t	temp_byte1;
	uint8_t	temp_byte2;
	uint8_t	checksum;
}dth11_private_t;

dth11_private_t	dth11_data;

uint8_t checkdth11status(void);
void dth11_Start(void);
static uint8_t dth11_read(void);
float dth11_get_humidity(void);
float dth11_get_temperature(void);
